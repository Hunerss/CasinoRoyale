        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Name="btn_0" Grid.Column="0" Width="100px" Height="40px" Click="Navigation" Style="{StaticResource BaseButtonStyle}">Go Back</Button>
            <TextBox Name="setBet" Grid.Column="1" Width="100px" Height="40px" FontSize="25px" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">Bet</TextBox>
            <Button Name="btn_1" Grid.Column="2" Width="100px" Height="40px" Click="Navigation" Style="{StaticResource BaseButtonStyle}">Start</Button>
            <TextBox IsEnabled="False" Name="allBet" Grid.Column="3" Width="100px" Height="40px" FontSize="25px" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">0</TextBox>
        </Grid>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
