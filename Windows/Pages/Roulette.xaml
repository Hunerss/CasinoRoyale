                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <!--numbers-->
                <Button Click="BetOperations" Name="bet_0" Grid.Column="0" Grid.Row="0" Grid.RowSpan="3" Content="0" FontSize="25" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="Green" FontFamily="Bodoni MT" Foreground="White"/>
